<%- include("../partials/nav.ejs") %>
<!-- main content -->
<main class="container content-container">
  <%- include("../partials/flashMsgs.ejs") %>
  <div class="container">
  <!-- <div class="jumbotron new-connection-container text-center"> -->
    <h2>
      <img id="eventPic" alt="" src="<%= connection.pic %>" /> &nbsp;
      <span id="eventTitle" style="display: block; text-align: center;"><%= connection.title %></span>    </h2>
    <br />
    <br />
    <form method="POST" action="/connections/<%=connection.id%>?_method=PUT">
      <div class="mb-3 form-group">
        <label for="category" class="form-label">Category</label>
        <input type="text" class="form-control" id="category" placeholder="Enter the category of your connection" value="<%= connection.category%>" name="category" required />
      </div>
      <div class="mb-3 form-group">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" placeholder="Enter the title of your connection" value="<%= connection.title%>" name="title" required />
      </div>
      <div class="mb-3 form-group">
        <label for="details" class="form-label">Details</label>
        <textarea class="form-control" id="details" placeholder="Enter the details of your connection" name="description" required minlength="10"><%= connection.description%></textarea>
      </div>
      <div class="mb-3 form-group">
        <label for="location" class="form-label">Where</label>
        <input type="text" class="form-control" id="location" placeholder="Enter the location of your connection" value="<%= connection.location%>" name="location" required />
      </div>
      <div class="row mb-3">
        <div class="col">
          <label for="date" class="form-label">When</label>
          <input type="date" class="form-control" id="date" value="<%= connection.date%>" name="date" required />
        </div>
        <div class="col">
          <label for="start-time" class="form-label">Start</label>
          <input type="time" class="form-control" id="start-time" value="<%= connection.start%>" name="start" required />
        </div>
        <div class="col">
          <label for="end-time" class="form-label">End</label>
          <input type="time" class="form-control" id="end-time" value="<%= connection.end%>" name="end" required />
        </div>
      </div>
      <div class="mb-3 form-group">
        <label for="file" class="form-label">File</label>
        <input type="text" class="form-control" id="file" accept="image/*" placeholder="Enter the image url" value="<%= connection.pic%>" name="pic" required pattern="^(http:\/\/|https:\/\/).+" title="Image url must start with http:// or https://" />
      </div>

      <div class="d-grid gap-2 submit-btn-container">
        <button type="submit" class="btn btn-primary">
          Update Connection
        </button>
      </div>
    </form>
  </div>
</main>
<br />
<br />
<!-- footer section -->
<%- include("../partials/footer.ejs") %>
